<?php
/*

forcesessionclose

*/

function forcesessionclose_help($path, $arg) {
	  $output = '';  //declare your output variable
  switch ($path) {
    case "admin/help#forcesessionclose":
      $output = '<p>'.  t("Set an absolute timeout for logged in users") .'</p>';
      break;
  }
  return $output;
}

function forcesessionclose_admin() {
  $form = array();

  $form['forcesessionclose_maxmins'] = array(
    '#type' => 'textfield',
    '#title' => t('Maximum number of minutes'),
    '#default_value' => variable_get('forcesessionclose_maxmins', 0),
    '#size' => 10,
    '#maxlength' => 10,
    '#description' => t("The maximum number of minutes a session can be active. (0 = disabled)."),
    '#required' => TRUE,
  );

  return system_settings_form($form);
}

function forcesessionclose_menu() {

  $items = array();

  $items['admin/settings/forcesessionclose'] = array(
    'title' => 'Force Session Close settings',
    'description' => 'Description of your settings page',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('forcesessionclose_admin'),
    'access arguments' => array('access administration pages'),
    'type' => MENU_NORMAL_ITEM,
   );

  return $items;
}

function forcesessionclose_admin_validate($form, &$form_state) {
  $maxmins = $form_state['values']['forcesessionclose_maxmins'];
  if (!is_numeric($maxmins)) {
    form_set_error('forcesessionclose_maxmins', t('You must enter an integer for the maximum number of minutes.'));
  }
  else if ($maxmins < 0) {
    form_set_error('forcesessionclose_maxmins', t('Maximum number of minutes must be positive.'));
  }
}


function forcesessionclose_init() {
	global $user;
	if($user->uid > 0){
		$maxmins = variable_get('forcesessionclose_maxmins', 0);
		$absolutetimeout = $user->login + ($maxmins * 60);
		
		if ($maxmins > 0 && $absolutetimeout < time()) {
			// Force the user to log out.
			module_load_include('inc', 'user', 'user.pages');
			user_logout();
		} 
	}
}


function forcesessionclose_uninstall() {
	variable_del('forcesessionclose_maxmins');
}